@using Newtonsoft.Json
@if (TempData["result"] != null)
{
    var statusJson = TempData["result"].ToString();
    var Status = JsonConvert.DeserializeObject<AuthService.MVC.Models.ToastifyModel>(statusJson);
    <partial name="_Toastify" model="@Status" />
}

<h1 class="h3 mb-2 text-gray-800">Add category</h1>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <form method="post" action="/admin/category/add">
            <div class="form-group">
                <label for="name">Name</label>
                <input name="name" type="text" class="form-control" id="name" aria-describedby="emailHelp" placeholder="Category name">
            </div>
            <div class="form-group">
                <label for="code">Code</label>
                <input name="code" type="text" class="form-control" id="code" placeholder="Category code">
            </div>
            <button type="submit" class="btn1 btn1-primary">Add</button>
        </form>
    </div>
</div>


