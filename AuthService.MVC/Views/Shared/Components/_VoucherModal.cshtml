<style>
    .coupon {
        border: 2px dashed #000;
        border-radius: 50px;
        background-color: white;
        padding: 20px;
        position: relative;
        display: flex;
        align-items: center;
        margin-bottom: 10px;
    }

        .coupon:before,
        .coupon:after {
            content: "";
            position: absolute;
            width: 20px;
            height: 20px;
            background-color: white;
            border: 1px solid black;
            border-radius: 50%;
        }

        .coupon:before {
            top: -10px;
            left: -10px;
        }

        .coupon:after {
            bottom: -10px;
            right: -10px;
        }

        .coupon .progress {
            height: 20px;
            background-color: #e9ecef;
        }

        .coupon .progress-bar {
            background-color: orange;
        }
</style>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Choose voucher</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="coupon border border-black position-relative d-flex align-items-center">
                    <div class="position-absolute top-0 start-0 translate-middle bg-white border border-black rounded-circle" style="width: 20px; height: 20px;"></div>
                    <div class="position-absolute bottom-0 end-0 translate-middle bg-white border border-black rounded-circle" style="width: 20px; height: 20px;"></div>
                    <div class="d-flex flex-column align-items-center justify-content-center px-4">
                        <span class="text-primary font-weight-bold h4">Coupon</span>
                        <span class="display-4 font-weight-bold">50%</span>
                    </div>
                    <div class="px-4 border-left border-dotted border-black d-flex flex-column align-items-center justify-content-center">
                        <div class="w-100 progress mb-2">
                            <div class="progress-bar" role="progressbar" style="width: 35%;" aria-valuenow="35" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <span class="position-absolute translate-middle font-weight-bold" style="right: 0; top: 50px; transform: translateX(50%);">35% Used</span>
                        <button class="btn btn-success font-weight-bold py-2 px-4 rounded-pill">Select</button>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


